<mujoco model="diffbot">
  <compiler angle="degree" coordinate="local"/>
  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.002"/>

  <asset>
    <texture builtin="gradient" height="100" name="texplane" rgb1="0.6 0.5 0.1" rgb2="0.0 0.0 0.0" type="2d" width="100"/>
    <material name="MatPlane" reflectance="0.5" shininess="0.5" specular="1" texture="texplane"/>
  </asset>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 -1.5 -1.5" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="40 40 40" type="plane"/>
    <body name="chassis" pos="0 0 0.125">
      <joint name="base_joint" type="free"/>
      <geom name="chassis_geom" type="box" size="0.15 0.15 0.075" rgba="0.8 0.8 0.8 1" mass="1.0"/>
      <body name="left_wheel" pos="-0.075 0.075 -0.075">
        <joint name="left_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
        <geom type="cylinder" size="0.05 0.04" fromto="0 0.075 0 0 0.11 0" rgba="1 0 0 1"/>
      </body>
      <body name="right_wheel" pos="-0.075 -0.075 -0.075">
        <joint name="right_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
        <geom type="cylinder" size="0.05 0.04" fromto="0 -0.075 0 0 -0.11 0" rgba="1 0 0 1"/>
      </body>
      <body name="caster_wheel" pos="0.1 0 -0.075">
        <geom type="sphere" size="0.05" rgba="1 1 1 1" mass="0.01" friction="0.001 0.001 0"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <velocity name="left_wheel_motor" joint="left_wheel_joint" kv="0.1" ctrlrange="-20 20"/>
    <velocity name="right_wheel_motor" joint="right_wheel_joint" kv="0.1" ctrlrange="-20 20"/>
  </actuator>
</mujoco>
